---
import { getCollection } from 'astro:content';
// const projects = await Astro.glob('@content/projects/**/*.md')
const projectEntries = await getCollection('projects');
projectEntries.sort((a, b) => Date.parse(b.data.release) - Date.parse(a.data.release));

// placeholders
import { Image } from 'astro:assets';
import social1 from '@images/linkedin.png';
import social2 from '@images/behance.png';
import social3 from '@images/github.png';
---

<style>
    @import '@styles/projects.css';
</style>

<div id="projects">
    <h2 class="wg-lighter">Projects</h1>
    <p class="secondary">At the moment, I'm still working on write-ups of my past projects which I will be releasing gradually.</p>
    <div>
        {projectEntries.map(entry => 
            <div class="list-item">
                <div class="year">
                    <p class="secondary">{entry.data.release}</p>
                </div>
                <div class="list-info">
                    
                    <h3><a href={`/projects/${entry.slug}`}>{entry.data.title}</a></h3>
                    
                    <p class="secondary">{entry.data.summary}</p>

                    <div id="techs">
                        {
                            
                            entry.data.techs.map(tech => 
                                <p class="tertiary">{tech}</p>
                            )
                    }
                    </div>  
                        
                </div>
                
            </div>
            // <project.Content />
        )}
    </div>
</div>


